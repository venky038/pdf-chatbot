:root {
    --primary: #3b82f6;
    --primary-hover: #2563eb;
    --primary-light: rgba(59, 130, 246, 0.1);
    --bg-main: #f8fafc;
    --sidebar-bg: #0f172a;
    --sidebar-text: #cbd5e1;
    --topbar-bg: rgba(255, 255, 255, 0.8);
    --card-bg: #ffffff;
    --text-main: #1e293b;
    --text-muted: #64748b;
    --border-light: #e2e8f0;
    --msg-user-bg: linear-gradient(135deg, #3b82f6, #2563eb);
    --msg-bot-bg: #ffffff;
    --msg-bot-border: #e2e8f0;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --radius-lg: 12px;
    --radius-md: 8px;
}

:root.dark-mode {
    --bg-main: #020617;
    --sidebar-bg: #0f172a;
    --topbar-bg: rgba(15, 23, 42, 0.8);
    --card-bg: #1e293b;
    --text-main: #f1f5f9;
    --text-muted: #94a3b8;
    --border-light: #334155;
    --msg-user-bg: linear-gradient(135deg, #2563eb, #1d4ed8);
    --msg-bot-bg: #1e293b;
    --msg-bot-border: #334155;
}

body {
    margin: 0;
    font-family: 'Inter', sans-serif;
    background: var(--bg-main);
    color: var(--text-main);
    height: 100vh;
    overflow: hidden;
    transition: background-color 0.3s ease, color 0.3s ease;
}

html {
    background: var(--bg-main);
}

/* --- Layout --- */
.app-layout {
    display: flex;
    height: 100%;
    width: 100%;
}

/* SIDEBAR */
.sidebar {
    width: 280px;
    background: var(--sidebar-bg);
    color: var(--sidebar-text);
    display: flex;
    flex-direction: column;
    border-right: 1px solid var(--border-light);
    z-index: 100;
}

.sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.brand {
    font-size: 1.25rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1.25rem;
    display: flex;
    align-items: center;
    gap: 10px;
}

.new-chat-btn {
    width: 100%;
    padding: 12px;
    background: var(--primary);
    border: none;
    color: white;
    border-radius: var(--radius-md);
    cursor: pointer;
    font-weight: 600;
    transition: all 0.2s;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.new-chat-btn:hover {
    background: var(--primary-hover);
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(59, 130, 246, 0.4);
}

/* MAIN CHAT AREA */
.chat-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: var(--bg-main);
    position: relative;
}

.top-bar {
    height: 70px;
    border-bottom: 1px solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2rem;
    background: var(--topbar-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 50;
}

.chat-title {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--text-main);
}

.top-actions {
    display: flex;
    gap: 10px;
    align-items: center;
}

/* MESSAGES CONTAINER */
.messages-container {
    flex: 1;
    padding: 2rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    /* Space between bubbles */
    scroll-behavior: smooth;
}

/* MESSAGE BUBBLES */
.message {
    max-width: 75%;
    display: flex;
    flex-direction: column;
    margin-bottom: 0.5rem;
}

/* User = Right Side */
.message.user {
    align-self: flex-end;
    align-items: flex-end;
}

/* Bot = Left Side */
.message.bot {
    align-self: flex-start;
    align-items: flex-start;
}

/* Message Assistant (Alias for bot) */
.message.assistant {
    align-self: flex-start;
    align-items: flex-start;
}

/* BUBBLE CONTENT */
.msg-content {
    padding: 14px 20px;
    border-radius: var(--radius-lg);
    line-height: 1.6;
    font-size: 0.95rem;
    position: relative;
    box-shadow: var(--shadow-sm);
    word-wrap: break-word;
    transition: all 0.2s ease;
}

.message.user .msg-content {
    background: var(--msg-user-bg);
    color: white;
    border-radius: 18px 18px 2px 18px;
}

.message.bot .msg-content,
.message.assistant .msg-content {
    background: var(--msg-bot-bg);
    color: var(--text-main);
    border: 1px solid var(--msg-bot-border);
    border-radius: 18px 18px 18px 2px;
}

/* CITATION LINKS (Pills) */
.citation-link {
    color: var(--primary);
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    background: #eff6ff;
    padding: 2px 8px;
    border-radius: 12px;
    text-decoration: none;
    margin: 0 2px;
    border: 1px solid #dbeafe;
    display: inline-flex;
    align-items: center;
    gap: 4px;
}

.citation-link:hover {
    background: #dbeafe;
}

/* POPOVER CARD */
.citation-popover {
    position: fixed;
    background: var(--popover-bg);
    color: var(--popover-text);
    width: 450px;
    max-width: 90vw;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.4);
    z-index: 1000;
    font-size: 0.9rem;
    line-height: 1.5;
    display: none;
    border: 1px solid #334155;
    animation: fadeIn 0.15s ease-out;
}

.popover-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #334155;
    padding-bottom: 8px;
    margin-bottom: 8px;
    font-weight: 600;
    color: white;
}

.popover-body {
    max-height: 300px;
    overflow-y: auto;
    white-space: pre-wrap;
    font-family: 'Consolas', monospace;
    font-size: 0.85rem;
    color: #cbd5e1;
    background: #0f172a;
    padding: 10px;
    border-radius: 6px;
}

.popover-close {
    cursor: pointer;
    background: none;
    border: none;
    color: #94a3b8;
    font-size: 1.2rem;
}

.popover-close:hover {
    color: white;
}

/* INPUT AREA */
.input-area {
    padding: 2rem;
    background: var(--bg-main);
    border-top: 1px solid var(--border-light);
    display: flex;
    justify-content: center;
}

.input-box {
    width: 100%;
    max-width: 800px;
    display: flex;
    gap: 12px;
    background: var(--card-bg);
    border: 1px solid var(--border-light);
    padding: 10px 16px;
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.input-box:focus-within {
    border-color: var(--primary);
    box-shadow: 0 0 0 4px var(--primary-light);
}

.input-box input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 1rem;
    padding: 10px 0;
    background: transparent;
    color: var(--text-main);
}

.btn-send {
    background: var(--primary);
    color: white;
    border: none;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s;
}

.btn-send:hover:not(:disabled) {
    background: var(--primary-hover);
    transform: scale(1.05);
}

.btn-send:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* UTILS */
.upload-label {
    cursor: pointer;
    color: #64748b;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 5px;
    font-weight: 500;
    transition: color 0.2s;
}

.upload-label:hover {
    color: var(--primary);
}

input[type="file"] {
    display: none;
}

/* Action Button (Summary) */
.btn-action {
    background: var(--card-bg);
    border: 1px solid var(--border-light);
    color: var(--text-main);
    padding: 8px 16px;
    border-radius: var(--radius-md);
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    gap: 8px;
}

.btn-action:hover {
    background: var(--primary-light);
    color: var(--primary);
    border-color: var(--primary);
}

/* Typing Indicator (The "Thinking" Dots) */
.typing-indicator {
    display: flex;
    gap: 4px;
    padding: 4px 8px;
}

.typing-indicator span {
    width: 6px;
    height: 6px;
    background: var(--text-muted);
    border-radius: 50%;
    animation: typing 1.4s infinite both;
}

.typing-indicator span:nth-child(1) {
    animation-delay: 0s;
}

.typing-indicator span:nth-child(2) {
    animation-delay: 0.2s;
}

.typing-indicator span:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes typing {

    0%,
    80%,
    100% {
        transform: scale(0);
    }

    40% {
        transform: scale(1);
    }
}

/* Modal Styling */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    backdrop-filter: blur(8px);
}

.modal-card {
    background: var(--card-bg);
    width: 600px;
    max-width: 90%;
    height: 80vh;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    border: 1px solid var(--border-light);
    overflow: hidden;
}

.modal-header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--border-light);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--topbar-bg);
}

.user-profile {
    padding: 1rem 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    background: rgba(0, 0, 0, 0.1);
}

.logout-link {
    color: #fca5a5;
    cursor: pointer;
    background: none;
    border: none;
    font-weight: 600;
    transition: color 0.2s;
}

.logout-link:hover {
    color: #ef4444;
}

.modal-body {
    padding: 2.5rem;
    overflow-y: auto;
    flex: 1;
    line-height: 1.8;
    color: var(--text-main);
}

.modal-footer {
    padding: 1.5rem 2rem;
    border-top: 1px solid var(--border-light);
    text-align: right;
    background: var(--topbar-bg);
}

.close-modal {
    background: var(--primary-light);
    border: none;
    font-size: 1.25rem;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    cursor: pointer;
    color: var(--primary);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
}

.close-modal:hover {
    background: var(--primary);
    color: white;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* === NEW FEATURES STYLES === */

/* Search Bar */
.search-bar {
    margin-top: 0.5rem;
}

.search-bar input {
    width: 100%;
    padding: 10px 14px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 0.85rem;
    transition: all 0.2s;
}

.search-bar input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--primary);
    box-shadow: 0 0 0 3px var(--primary-light);
}

/* Sidebar Controls */
.sidebar-controls {
    display: flex;
    gap: 0.5rem;
    padding: 0 1rem;
    margin: 0.5rem 0;
    border-top: 1px solid #334155;
    padding-top: 0.5rem;
}

.sidebar-btn {
    flex: 1;
    padding: 10px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--sidebar-text);
    cursor: pointer;
    font-size: 1.1rem;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.sidebar-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    transform: translateY(-1px);
}

/* Chat Item Enhancements */
.chat-item {
    padding: 12px 14px;
    cursor: pointer;
    border-radius: var(--radius-md);
    margin-bottom: 4px;
    transition: all 0.2s;
    border: 1px solid transparent;
}

.chat-item-title {
    font-weight: 600;
    color: white;
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-item-date {
    font-size: 0.75rem;
    color: #64748b;
}

.chat-item:hover,
.chat-item.active {
    background: #1e293b;
    color: white;
    border-color: var(--primary);
}

/* Empty State */
.empty-state {
    padding: 2rem;
    text-align: center;
    color: #64748b;
    font-size: 0.9rem;
}

/* Toast Notifications */
.toast {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: #1e293b;
    color: white;
    padding: 12px 20px;
    border-radius: 8px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    z-index: 3000;
    opacity: 0;
    transform: translateY(100px);
    transition: all 0.3s ease;
    max-width: 300px;
    word-wrap: break-word;
    border-left: 4px solid var(--primary);
}

.toast.show {
    opacity: 1;
    transform: translateY(0);
}

/* Loading Spinner - Compact & Modern */
.loading-inline {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0.5rem 0;
    font-size: 0.95rem;
}

.spinner-mini {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-top-color: var(--primary);
    border-radius: 50%;
    animation: spin-mini 0.6s linear infinite;
    display: inline-block;
    flex-shrink: 0;
}

.loading-text {
    color: var(--text-secondary);
    font-weight: 500;
    letter-spacing: 0.3px;
}

@keyframes spin-mini {
    to {
        transform: rotate(360deg);
    }
}

/* Dark mode support */
:root.dark-mode .spinner-mini {
    border-color: rgba(255, 255, 255, 0.15);
}

/* Tags */
.tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: #eff6ff;
    color: var(--primary);
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.85rem;
    margin: 4px 4px;
    border: 1px solid #dbeafe;
}

.tag-remove {
    background: none;
    border: none;
    color: var(--primary);
    cursor: pointer;
    font-size: 1rem;
    padding: 0;
    line-height: 1;
}

.tag-remove:hover {
    color: #ef4444;
}

/* Pagination */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    color: #64748b;
    font-size: 0.9rem;
}

.pagination button {
    background: #1e293b;
    border: 1px solid #334155;
    color: #cbd5e1;
    padding: 6px 12px;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
}

.pagination button:hover {
    background: #334155;
    color: white;
}

/* Context Menu */
.context-menu {
    position: fixed;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    z-index: 2500;
    min-width: 160px;
    overflow: hidden;
}

.context-menu button {
    width: 100%;
    padding: 10px 12px;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: 0.9rem;
    color: #334155;
    transition: background 0.2s;
}

.context-menu button:hover {
    background: #f1f5f9;
}

/* Message Wrapper & Buttons */
.msg-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
}

.msg-buttons-container {
    display: flex;
    gap: 0.5rem;
    opacity: 0.3;
    /* Always slightly visible for discovery */
    transition: opacity 0.2s ease;
    margin-top: 0.5rem;
    flex-wrap: wrap;
}

.message:hover .msg-buttons-container {
    opacity: 1;
}

/* Message Copy Button */
.msg-copy-btn {
    background: #2563eb;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.75rem;
    font-weight: 600;
    transition: all 0.2s ease;
    white-space: nowrap;
    box-shadow: 0 1px 3px rgba(37, 99, 235, 0.2);
}

.msg-copy-btn:hover {
    background: #1d4ed8;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.msg-copy-btn:active {
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(37, 99, 235, 0.2);
}

/* Dark Mode - Copy Button */
.dark-mode .msg-copy-btn {
    background: #3b82f6;
    color: white;
    box-shadow: 0 1px 3px rgba(59, 130, 246, 0.3);
}

.dark-mode .msg-copy-btn:hover {
    background: #2563eb;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
}

/* Message Ratings */
.msg-ratings {
    display: flex;
    gap: 0.5rem;
}

.msg-rating-btn {
    background: #f1f5f9;
    border: 1px solid #cbd5e1;
    padding: 4px 10px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.msg-rating-btn:hover {
    background: #e2e8f0;
    border-color: #94a3b8;
    transform: translateY(-1px);
}

.msg-rating-btn.active {
    background: #3b82f6;
    border-color: #3b82f6;
    color: white;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
}

.msg-rating-btn:disabled {
    opacity: 0.3;
    cursor: wait;
    filter: grayscale(1);
}

/* Dark Mode - Ratings */
.dark-mode .msg-rating-btn {
    background: #334155;
    border-color: #475569;
    color: #cbd5e1;
}

.dark-mode .msg-rating-btn:hover {
    background: #475569;
    border-color: #64748b;
}

.dark-mode .msg-rating-btn.active {
    background: #3b82f6;
    border-color: #3b82f6;
    color: white;
}

/* Cleanup Legacy Dark Mode Block */
/* (Handled by :root.dark-mode variables above) */

.dark-mode .modal-card {
    background: #1e293b;
    color: #e2e8f0;
}

.dark-mode .modal-header {
    border-bottom-color: #334155;
}

.dark-mode .modal-body {
    color: #cbd5e1;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .sidebar {
        width: 220px;
    }

    .messages-container {
        padding: 1rem;
    }

    .message {
        max-width: 85%;
    }
}

@media (max-width: 768px) {
    .sidebar {
        width: 200px;
    }

    .chat-title {
        font-size: 1rem;
    }

    .top-bar {
        padding: 0 1rem;
        height: 50px;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
    }

    .top-actions {
        width: 100%;
        margin-top: 0.5rem;
        flex-wrap: wrap;
        gap: 6px;
    }

    .messages-container {
        padding: 1rem;
    }

    .message {
        max-width: 90%;
    }

    .input-area {
        padding: 1rem;
    }

    .input-box {
        max-width: 100%;
    }

    .citation-popover {
        width: 90vw;
    }

    .modal-card {
        width: 95%;
        height: 90vh;
    }
}

@media (max-width: 480px) {
    .app-layout {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        max-height: 150px;
        overflow: hidden;
        border-right: none;
        border-bottom: 1px solid #334155;
        flex-direction: row;
    }

    .sidebar-header {
        flex: 1;
        padding: 1rem;
    }

    .brand {
        margin-bottom: 0;
        font-size: 1rem;
    }

    .new-chat-btn {
        width: auto;
        padding: 6px 12px;
    }

    .chat-list {
        display: none;
    }

    .user-profile {
        display: none;
    }

    .chat-main {
        width: 100%;
    }

    .messages-container {
        padding: 0.5rem;
    }

    .message {
        max-width: 95%;
    }

    .input-box {
        gap: 6px;
    }

    .btn-send {
        padding: 0 12px;
    }

    .top-actions {
        flex-direction: column;
        gap: 4px;
        width: 100%;
    }

    .btn-action {
        padding: 4px 8px;
        font-size: 0.8rem;
        white-space: nowrap;
    }
}/* Uploading Animation Overlay */
.upload-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(8px);
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    color: white;
}

.upload-spinner {
    width: 60px;
    height: 60px;
    border: 5px solid rgba(255, 255, 255, 0.2);
    border-top: 5px solid var(--primary);
    border-radius: 50%;
    animation: spin-global 1s linear infinite;
    margin-bottom: 2rem;
}

@keyframes spin-global {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.upload-text {
    font-size: 1.4rem;
    font-weight: 700;
    letter-spacing: 1px;
    background: linear-gradient(135deg, #ffffff 0%, #cbd5e1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

/* Spinner Mini (Inline) Fixes */
.spinner-mini {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(0,0,0,0.1);
    border-top-color: var(--primary);
    border-radius: 50%;
    animation: spin-global 0.8s linear infinite;
    display: inline-block;
}

.dark-mode .spinner-mini {
    border: 2px solid rgba(255,255,255,0.1);
    border-top-color: var(--primary);
}
